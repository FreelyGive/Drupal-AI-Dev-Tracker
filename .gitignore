# Drupal .gitignore
# This file contains a comprehensive set of ignores for Drupal projects

# Ignore directories generated by Composer
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Ignore sensitive configuration files
/web/sites/*/settings.local.php
/web/sites/*/services.yml
/web/sites/*/services.local.yml

# Ignore Drupal's file directory
/web/sites/*/files/
/web/sites/*/private/

# Ignore SimpleTest multi-site environment
/web/sites/simpletest

# Ignore files, executables, and patches that don't belong in git
*.orig
*.rej
*.log
*.swp
*.swo
*~

# Ignore OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore IDE and editor files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace
.atom/
.project
.buildpath
.settings/
*.tmproj
*.tmproject
tmtags

# Ignore backup files
*.bak
*.backup
*.sql
*.gz
*.tar
*.zip

# Ignore temporary files
tmp/
temp/
cache/

# Ignore Drush and other CLI tools
/drush/contrib/
/.drush/

# Ignore Docker files (if using Docker directly)
docker-compose.override.yml

# Ignore Behat and other testing
/tests/behat/local.yml

# Ignore generated documentation
docs/_build/

# Exception: Allow custom modules, themes, and profiles
!/web/modules/custom/
!/web/themes/custom/
!/web/profiles/custom/

# Exception: Allow configuration exports if using config management
!/config/sync/.htaccess

# Ignore Lando files
/.lando.yml

# Ignore node modules and build files
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
/web/themes/*/node_modules/
/web/themes/*/dist/
/web/modules/*/node_modules/
/web/modules/*/dist/

# Ignore Sass cache
.sass-cache/
*.css.map

# Ignore Composer lock file for libraries (uncomment if you want to ignore)
# composer.lock

# Ignore specific Drupal files
/web/autoload.php
/web/index.php
/web/install.php
/web/rebuild.php
/web/update.php
/web/web.config
/web/.csslintrc
/web/.editorconfig
/web/.eslintignore
/web/.eslintrc.json
/web/.gitattributes
/web/.htaccess
/web/robots.txt

# Ignore local environment files
.env
.env.local
.env.*.local

# Ignore PHPUnit cache
.phpunit.result.cache

# Ignore Xdebug files
xdebug.log

# Ignore local configuration overrides
settings.local.php
services.local.yml

# Ignore translation files that shouldn't be committed
/web/sites/*/files/translations/

# Ignore aggregated CSS and JS files
/web/sites/*/files/css/
/web/sites/*/files/js/

# Ignore image styles
/web/sites/*/files/styles/

# Ignore custom uploads and media
/web/sites/*/files/upload/
/web/sites/*/files/media/

# Keep important files (these override broader ignore patterns above)
!/web/sites/default/
!/web/sites/default/default.settings.php
!/web/sites/default/default.services.yml
!/web/.htaccess.txt
!/web/INSTALL.txt
!/web/README.txt
!/web/robots.txt.dist

# Ignore specific contrib modules that might be patched locally
# (Uncomment and modify as needed)
# /web/modules/contrib/specific_module/

# Project-specific ignores (add your own below)
# ==========================================

# Ignore any database dumps
*.sql.gz
dump.sql
backup.sql


# Ignore any local scripts or utilities
local_scripts/
utilities/
scripts/local/

# Ignore reference design files (these are development assets)
/ReferenceDesign/

# Ignore enhanced data creation script (this is for development)
create_enhanced_dummy_data.php
run_enhanced_data.sh

# Ignore backup files
.gitignore.backup
/recipes/
.claude/settings.local.json

# DevPanel Ignores

/.devpanel/salt.txt
/web/sites/default/settings.php

# Ignore sensitive test artifacts
cookies.txt
test-kanban-login.js
