{#
/**
 * @file
 * Template for the AI Calendar Dashboard.
 *
 * Available variables:
 * - calendar_data: Array of calendar data organized by companies
 * - week_start: DateTime object for the start of the week
 * - week_end: DateTime object for the end of the week
 * - week_offset: Integer offset for current week
 */
#}


<div class="ai-calendar-dashboard">
  <!-- Top Navigation -->
  <div class="dashboard-navigation">
    <div class="nav-links">
      <a href="/ai-dashboard" class="nav-link">Dashboard</a>
      <a href="/ai-dashboard/calendar" class="nav-link{% if not is_organizational_view %} active{% endif %}">Calendar View</a>
      <a href="/ai-dashboard/calendar/organizational" class="nav-link{% if is_organizational_view %} active{% endif %}">Organizational View</a>
      <a href="/ai-dashboard/priority-kanban" class="nav-link">Kanban</a>
      <a href="/ai-dashboard/projects" class="nav-link">Projects</a>
      <a href="/ai-dashboard/docs" class="nav-link">Docs</a>
    </div>
  </div>
  
  <!-- Header -->
  <div class="calendar-header">
    <div class="header-content">
      <div class="week-info">
        <h1 class="page-title">AI Module Issue Calendar</h1>
        <h2 class="week-range">
          {{ week_start|date('M j') }} - {{ week_end|date('j, Y') }}
          {% if week_offset == 0 %}
            <span class="current-week">(Current)</span>
          {% endif %}
        </h2>
      </div>
      
      <div class="week-controls">
        <div class="issue-count">
          {{ calendar_data.week_summary.active + calendar_data.week_summary.needs_review + calendar_data.week_summary.needs_work + calendar_data.week_summary.fixed }}
        </div>
        
        <div class="nav-buttons">
          <a href="/ai-dashboard/calendar?week={{ week_offset - 1 }}" class="btn btn-outline">
            <span class="chevron-left">‚Äπ</span>
          </a>
          
          {% if week_offset != 0 %}
            <a href="/ai-dashboard/calendar" class="btn btn-outline">
              <span class="calendar-icon">üìÖ</span> Now
            </a>
          {% endif %}
          
          <a href="/ai-dashboard/calendar?week={{ week_offset + 1 }}" class="btn btn-outline">
            <span class="chevron-right">‚Ä∫</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Week Summary -->
  <div class="week-summary">
    <h3 class="summary-title">Week Summary</h3>
    <p class="summary-legend">
      <span class="legend-item">
        <span class="dot committed"></span> Committed days
      </span>
      <span class="legend-item">
        <span class="dot available"></span> Available days
      </span>
    </p>
    
    <div class="summary-grid">
      <div class="summary-card active">
        <div class="summary-number">{{ calendar_data.week_summary.active }}</div>
        <div class="summary-label">Active</div>
      </div>
      
      <div class="summary-card review">
        <div class="summary-number">{{ calendar_data.week_summary.needs_review }}</div>
        <div class="summary-label">Review</div>
      </div>
      
      <div class="summary-card work">
        <div class="summary-number">{{ calendar_data.week_summary.needs_work }}</div>
        <div class="summary-label">Work</div>
      </div>
      
      <div class="summary-card fixed">
        <div class="summary-number">{{ calendar_data.week_summary.fixed }}</div>
        <div class="summary-label">Fixed</div>
      </div>
      
      <div class="summary-card capacity">
        <div class="summary-number">
          {{ calendar_data.week_summary.total_commitment }}
          <span class="capacity-total">/{{ calendar_data.week_summary.total_capacity }}</span>
        </div>
        <div class="summary-label">Team Capacity</div>
      </div>
    </div>
  </div>

  <!-- Calendar Filters -->
  <div class="calendar-filters">
    <div class="filter-group">
      <label for="calendar-priority-filter">Filter by Priority:</label>
      <select id="calendar-priority-filter" class="filter-select">
        <option value="">All Priorities</option>
        <option value="critical">Critical</option>
        <option value="major">Major</option>
        <option value="normal">Normal</option>
        <option value="minor">Minor</option>
      </select>
    </div>
    
    <div class="filter-group">
      <label for="calendar-status-filter">Filter by Status:</label>
      <select id="calendar-status-filter" class="filter-select">
        <option value="">All Statuses</option>
        <option value="active">Active</option>
        <option value="needs-review">Needs Review</option>
        <option value="needs-work">Needs Work</option>
        <option value="fixed">Fixed</option>
      </select>
    </div>
    
    <div class="filter-group">
      <label for="calendar-track-filter">Filter by Track:</label>
      <select id="calendar-track-filter" class="filter-select">
        <option value="">All Tracks</option>
        {% for track in filter_options.tracks %}
          <option value="{{ track.value }}">{{ track.label }}</option>
        {% endfor %}
      </select>
    </div>
    
    <div class="filter-group">
      <label for="calendar-workstream-filter">Filter by Workstream:</label>
      <select id="calendar-workstream-filter" class="filter-select">
        <option value="">All Workstreams</option>
        {% for workstream in filter_options.workstreams %}
          <option value="{{ workstream.value }}">{{ workstream.label }}</option>
        {% endfor %}
      </select>
    </div>
    
    <button id="clear-calendar-filters" class="btn btn-secondary">Clear Filters</button>
  </div>

  <!-- Company Groups -->
  <div class="company-groups" id="company-groups">
    {% for company in calendar_data.companies %}
      <div class="company-group" data-company-id="{{ company.id }}">
        
        <!-- Company Header -->
        <div class="company-header">
          <div class="company-info">
            {% if company.logo_url %}
              <img src="{{ company.logo_url }}" alt="{{ company.name }} logo" class="company-logo">
            {% endif %}
            <h3 class="company-name">
              {% if company.drupal_profile %}
                <a href="https://drupal.org/{{ company.drupal_profile }}" target="_blank" class="company-drupal-link">
                  {{ company.name }}
                </a>
              {% else %}
                {{ company.name }}
              {% endif %}
              {% if company.is_ai_maker %}
                <span class="ai-maker-badge ai-maker" title="AI Maker">Maker</span>
              {% else %}
                <span class="ai-maker-badge not-ai-maker" title="Not an AI Maker"><span class="strikethrough">Maker</span></span>
              {% endif %}
            </h3>
            <span class="developer-count">{{ company.developers|length }}</span>
          </div>
          
          <div class="company-actions">
            {% if company.drupal_profile %}
              <a href="https://drupal.org/{{ company.drupal_profile }}" target="_blank" class="company-link-btn" title="View on Drupal.org">
                üîó
              </a>
            {% endif %}
            {% if user_has_admin_permission %}
              <a href="/node/{{ company.id }}/edit" class="company-edit-btn" title="Edit Company">
                ‚öôÔ∏è
              </a>
            {% endif %}
          </div>
        </div>

        <!-- Developer Rows -->
        <div class="developer-rows">
          {% for developer in company.developers %}
            <div class="developer-row" data-developer-id="{{ developer.id }}">
              
              <!-- Developer Info -->
              <div class="developer-info">
                <div class="developer-profile">
                  {% if developer.avatar_url %}
                    <img src="{{ developer.avatar_url }}" alt="{{ developer.name }} avatar" class="developer-avatar">
                  {% else %}
                    <div class="developer-avatar fallback">
                      {{ developer.name|split(' ')|map(name => name|first)|join('') }}
                    </div>
                  {% endif %}
                  
                  <div class="developer-details">
                    <h4 class="developer-name">{{ developer.name }}</h4>
                    <div class="developer-meta">
                      <div class="weekly-commitment" title="{{ developer.weekly_commitment > 0 ? developer.weekly_commitment ~ ' days committed per week' : 'No time commitment - helps when available' }}">
                        {% for i in 1..5 %}
                          {% set commitment_level = 'empty' %}
                          {% if developer.weekly_commitment >= i %}
                            {% set commitment_level = 'filled' %}
                          {% elseif developer.weekly_commitment > (i - 1) %}
                            {% set commitment_level = 'half' %}
                          {% endif %}
                          <div class="commitment-pip {{ commitment_level }}"></div>
                        {% endfor %}
                      </div>
                      <div class="developer-stats">
                        <div class="issue-count">
                          <span class="count-number">{{ developer.issues|length }}</span>
                          <span class="count-label">issue{{ developer.issues|length != 1 ? 's' : '' }}</span>
                        </div>
                        {% if user_has_admin_permission and developer.nid %}
                          <a href="/node/{{ developer.nid }}/edit" class="developer-edit-link" title="Edit contributor">
                            <span class="edit-icon">‚öô</span>
                          </a>
                        {% endif %}
                      </div>
                    </div>
                    {% if developer.current_focus %}
                      <div class="developer-focus" title="{{ developer.current_focus }}">
                        {% set clean_focus = developer.current_focus|replace({'Currently ': '', 'currently ': ''}) %}
                        {{ clean_focus }}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>

              <!-- Issues Grid -->
              <div class="issues-grid">
                {% if developer.issues|length > 0 %}
                  {% for issue in developer.issues %}
                    <div class="issue-card {{ issue.status|replace({'_': '-'}) }} priority-{{ issue.priority }} assignment-{{ issue.assignment_status|default('current') }}" data-issue-id="{{ issue.id }}">
                      <div class="issue-header">
                        <div class="issue-header-left">
                          {% if issue.track %}
                            <span class="issue-track" data-track="{{ issue.track }}" title="Track: {{ issue.track_label|default(issue.track) }}">{{ issue.track_label|default(issue.track) }}</span>
                          {% endif %}
                          {% if issue.issue_number %}
                            <span class="issue-number">#{{ issue.issue_number }}</span>
                          {% endif %}
                          <span class="issue-module">{{ issue.module }}</span>
                        </div>
                        <div class="issue-actions">
                          {% if issue.url != '#' %}
                            <a href="{{ issue.url }}" target="_blank" class="issue-link">
                              <span class="external-icon">‚Üó</span>
                            </a>
                          {% endif %}
                          {% if user_has_admin_permission and issue.nid %}
                            <button class="issue-remove-btn" data-issue-id="{{ issue.id }}" title="Remove from this week">
                              <span class="remove-icon">‚úï</span>
                            </button>
                            <a href="/node/{{ issue.nid }}/edit" class="issue-edit-link" title="Edit issue">
                              <span class="edit-icon">‚öô</span>
                            </a>
                          {% endif %}
                        </div>
                      </div>
                      
                      <div class="issue-title-container">
                        <h5 class="issue-title" data-tooltip="{{ issue.title }}">{{ issue.title }}</h5>
                        {% if issue.update_summary %}
                          <div class="issue-update-summary" data-tooltip="{{ issue.update_summary_full }}">
                            {{ issue.update_summary|length > 60 ? issue.update_summary|slice(0, 57) ~ '...' : issue.update_summary }}
                          </div>
                        {% endif %}
                      </div>
                      
                      <div class="issue-footer">
                        <div class="issue-meta">
                          <span class="issue-status">{{ issue.status|replace({'_': ' ', 'needs ': ''})|title }}</span>
                          <span class="issue-priority priority-{{ issue.priority }}" title="{{ issue.priority|title }} priority">{{ issue.priority|title }}</span>
                          {% if issue.workstream %}
                            <span class="issue-workstream" data-workstream="{{ issue.workstream }}" title="Workstream: {{ issue.workstream_label|default(issue.workstream) }}">{{ issue.workstream_label|default(issue.workstream) }}</span>
                          {% endif %}
                          {% if issue.is_blocked %}
                            {% set blocked_tooltip %}Blocked By:
                              {%- for blocked_issue in issue.blocked_issues %}
                                <br>#{{ blocked_issue.issue_number }} - {{ blocked_issue.title }} - {{ blocked_issue.assignee }}
                              {%- endfor -%}
                            {% endset %}
                            <span class="issue-blocked" title="{{ blocked_tooltip }}">Blocked</span>
                          {% endif %}
                        </div>
                        
                        <div class="issue-planning-badges">
                          <div class="issue-dates">
                            {% if issue.due_date %}
                              {% set due_date = issue.due_date|date('Y-m-d') %}
                              {% set today = 'now'|date('Y-m-d') %}
                              {% set is_overdue = due_date < today %}
                              {% set days_diff = (due_date|date('U') - today|date('U')) / 86400 %}
                              {% set is_due_soon = days_diff <= 3 and days_diff >= 0 %}
                              
                              <div class="issue-deadline {{ is_overdue ? 'overdue' : (is_due_soon ? 'due-soon' : '') }}" data-tooltip="Due Date: {{ issue.due_date|date('M j, Y') }}">
                                <span class="clock-icon">‚è∞</span>
                                <span class="deadline-text">{{ issue.due_date|date('M j') }}</span>
                              </div>
                            {% endif %}

                            {% if issue.checkin_date %}
                              {% set checkin_date = issue.checkin_date|date('Y-m-d') %}
                              {% set today = 'now'|date('Y-m-d') %}
                              {% set is_checkin_today = checkin_date == today %}
                              {% set days_diff = (checkin_date|date('U') - today|date('U')) / 86400 %}
                              {% set is_checkin_soon = days_diff <= 1 and days_diff >= 0 %}
                              
                              <div class="issue-checkin-date {{ is_checkin_today ? 'checkin-today' : (is_checkin_soon ? 'checkin-soon' : '') }}" data-tooltip="Check-in Date: {{ issue.checkin_date|date('M j, Y') }}">
                                <span class="checkin-icon">üîî</span>
                                <span class="checkin-text">{{ issue.checkin_date|date('M j') }}</span>
                              </div>
                            {% endif %}
                          </div>

                          {% if issue.is_meta_issue %}
                            <div class="issue-meta-badge">
                              <span class="meta-icon">üè∑Ô∏è</span>
                              <span class="meta-text">Epic</span>
                            </div>
                          {% endif %}
                        </div>
                        
                        {% if issue.has_conflict %}
                          <div class="assignment-conflict">
                            <span class="warning-icon">‚ö†Ô∏è</span>
                            <span class="conflict-text">Assignment conflict on d.o</span>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  {% endfor %}
                {% else %}
                  <div class="no-issues">
                    <div class="no-issues-content">
                      <span class="calendar-icon">üìÖ</span>
                      <p class="no-issues-text">Available</p>
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Backlog Drawer -->
  <div id="backlog-drawer" class="backlog-drawer">
    <div class="backlog-header">
      <h3>üìã Issue Backlog</h3>
      <div class="backlog-controls">
        {% if user_has_admin_permission %}
          <button id="sync-all-drupal-assignments" class="btn btn-primary" title="Sync all assigned issues from drupal.org for this week">
            üîÑ Sync All from Drupal.org
          </button>
          {% if week_offset == 0 %}
            <button id="copy-previous-week" class="btn btn-secondary" title="Add assignments from previous week to this week">
              üìã Pull from Previous Week
            </button>
          {% endif %}
          <button id="remove-all-week-issues" class="btn btn-danger" title="Remove all issues from this week (moves back to backlog)">
            üóëÔ∏è Remove All from Week
          </button>
        {% endif %}
        <button id="close-backlog" class="btn btn-close" title="Close backlog">‚úï</button>
      </div>
    </div>

    <div class="backlog-filters">
      <div class="filter-group">
        <label for="module-filter">Module:</label>
        <select id="module-filter" class="filter-select">
          <option value="">All Modules</option>
          {% for module_id, module_name in backlog_data.modules %}
            <option value="{{ module_id }}">{{ module_name }}</option>
          {% endfor %}
        </select>
      </div>
      
      <div class="filter-group">
        <label for="tag-filter">Tag:</label>
        <select id="tag-filter" class="filter-select">
          <option value="">All Tags</option>
          {% for tag in backlog_data.tags %}
            <option value="{{ tag }}">{{ tag }}</option>
          {% endfor %}
        </select>
      </div>
      
      <div class="filter-group">
        <label for="priority-filter">Priority:</label>
        <select id="priority-filter" class="filter-select">
          <option value="">All Priorities</option>
          <option value="critical">Critical</option>
          <option value="major">Major</option>
          <option value="normal">Normal</option>
          <option value="minor">Minor</option>
        </select>
      </div>
      
      <button id="clear-filters" class="btn btn-secondary">Clear Filters</button>
    </div>

    <div class="backlog-content">
      <div class="backlog-count">
        <span id="showing-count">{{ backlog_data.issues|length|default(0) }}</span> unassigned issues
      </div>
      
      <div class="backlog-issues" id="backlog-issues">
        {% if backlog_data.issues is defined and backlog_data.issues|length > 0 %}
          {% for issue in backlog_data.issues %}
            <div class="backlog-issue" 
                 data-issue-id="{{ issue.id }}"
                 data-module-id="{{ issue.module_id }}" 
                 data-tags="{{ issue.tags|join(',') }}"
                 data-priority="{{ issue.priority }}"
                 draggable="true">
              <div class="issue-header">
                <span class="issue-number">#{{ issue.number }}</span>
                <span class="issue-priority priority-{{ issue.priority }}">{{ issue.priority|title }}</span>
                {% if issue.url != '#' %}
                  <a href="{{ issue.url }}" target="_blank" class="issue-external-link" title="View on external site">üîó</a>
                {% endif %}
              </div>
              
              <h4 class="issue-title">{{ issue.title }}</h4>
              
              <div class="issue-meta">
                <span class="issue-module">üì¶ {{ issue.module }}</span>
                <span class="issue-status status-{{ issue.status|replace({'_': '-'}) }}">{{ issue.status|replace({'_': ' '})|title }}</span>
              </div>
              
              {% if issue.tags|length > 0 %}
                <div class="issue-tags">
                  {% for tag in issue.tags %}
                    <span class="tag">{{ tag }}</span>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        {% else %}
          <div class="no-backlog-issues" style="text-align: center; padding: 2rem; color: #6b7280;">
            <p>üîç No unassigned issues found</p>
            <p style="font-size: 0.75rem;">Issues that are assigned to developers won't appear here.</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Backlog Toggle Button -->
  <button id="show-backlog" class="backlog-toggle" title="Show Issue Backlog">
    üìã Backlog ({{ backlog_data.issues|length }})
  </button>

  <!-- Drop Zone Indicator -->
  <div id="drop-indicator" class="drop-indicator">
    <div class="drop-indicator-content">
      <div class="drop-icon">üìå</div>
      <div class="drop-text">Drop here to assign</div>
    </div>
  </div>
  
</div>